<VirtualHost *:80>
    ServerName {{ our_domain }}
    ServerAlias www.{{ our_domain }}

    DocumentRoot /var/www/{{ our_domain }}/web
    <Directory /var/www/{{ our_domain }}/web>
        AllowOverride All
        Order Allow,Deny
        Allow from All
    </Directory>

    ErrorLog /var/log/apache2/{{ our_domain | replace(".", "_") }}_error.log
    CustomLog /var/log/apache2/{{ our_domain | replace(".", "_") }}_access.log combined
</VirtualHost>
